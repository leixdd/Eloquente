<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainRel"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Package Sample"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:textSize="20sp"
            android:fontFamily="@font/ralewaysemibold"
            android:id="@+id/packageTitle"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚± 10,000"
            android:background="@color/lightGray"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:id="@+id/packagePrice"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:maxLines="400"
                    android:lines="10"
                    android:id="@+id/packageOtherText"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>