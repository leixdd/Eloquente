<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eloquente.com.eloquente.Modules.EloRate"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:padding="15dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageMenu"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bacon and Mushroom Soup"
            android:layout_marginTop="13dp"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:fontFamily="@font/ralewaysemibold"
            android:id="@+id/menuName"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave a comment"
            android:layout_marginTop="13dp"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtComment"
            android:lines="5"
            android:maxLines="10"
            android:gravity="top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How do you rate this dish"
            android:layout_marginTop="13dp"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:stepSize="1"
            />

        <Button
            android:id="@+id/btnFeed"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="12sp"
            android:text="Submit this Feedback"
            android:background="@color/colorPrimaryDark"
            android:drawableEnd="@drawable/ic_send_black_242dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:tint ="@android:color/white"
            android:textColor="@android:color/white" />

    </LinearLayout>







</LinearLayout>
